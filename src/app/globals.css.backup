@import "tailwindcss";
@import "../styles/editor.css";

/* Peter Font Family */
@font-face {
  font-family: 'Peter';
  src: url('/fonts/Peter-Test-Regular-BF641a642fd8f5a.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Peter';
  src: url('/fonts/Peter-Test-Medium-BF641a642fc2433.woff') format('woff');
  font-weight: 500;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Peter';
  src: url('/fonts/Peter-Test-Bold-BF641a642f8fce0.woff') format('woff');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Peter';
  src: url('/fonts/Peter-Test-Light-BF641a642fe454f.woff') format('woff');
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}

:root {
  /* Primary Colors */
  --primary-dark: #03396c;    /* Dark Blue - Main Background */
  --primary-light: #ffffff;    /* White - Card Background */
  
  /* Text Colors */
  --text-primary: #171717;     /* Dark Text */
  --text-secondary: #4B5563;   /* Gray Text */
  --text-white: #ffffff;       /* White Text */
  --text-muted: rgba(255, 255, 255, 0.6); /* Muted White Text */
  
  /* Accent Colors */
  --accent-blue: #03396c;      /* Blue for Links & Buttons */
  --accent-blue-hover: #1E40AF;

  /* Accent Light Blue */
  --accent-light-blue: #6497b1; /* Light Blue Accent */
  --accent-light-blue-hover: #5DADE2; /* Light Blue Accent */

  /* Accent Cream */
  --accent-cream: #fffff4;     /* Cream Accent */
  --accent-cream-hover: #FFF8E1; /* Cream Accent */
  /* Border Colors */
  --border-light: #E5E7EB;     /* Light Gray Border */
  
  /* Shadow */
  --shadow-card: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

@layer base {
  body {
    background: var(--primary-dark);
    color: var(--text-primary);
  }
}

/* Peter Font Classes */
.font-peter {
  font-family: 'Peter', Arial, Helvetica, sans-serif;
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: Arial, Helvetica, sans-serif;
}

